  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "bin",
    "rootDir": "src",
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "bin"
  ]
}
